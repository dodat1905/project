<%= form_for user do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label t :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.fields_for :profile do |builder| %>

    <%= builder.label t :name %>
    <%= builder.text_field :name, class: "form-control" %>

    <%= builder.label t :age %>
    <%= builder.number_field :age, class: "form-control" %>

    <%= builder.label t :address %>
    <%= builder.text_field :address, class: "form-control" %>
  <% end %>

  <%= f.label t :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label t :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
